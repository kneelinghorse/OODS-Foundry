{
  "theme": {
    "shadow": {
      "elevation": {
        "card": {
          "$type": "shadow",
          "$value": {
            "offsetX": "0px",
            "offsetY": "16px",
            "blur": "40px",
            "spread": "-12px",
            "color": "rgba(15, 23, 42, 0.12)"
          },
          "$description": "Baseline elevation shadow for cards and raised panels in Theme 0."
        },
        "overlay": {
          "$type": "shadow",
          "$value": {
            "offsetX": "0px",
            "offsetY": "24px",
            "blur": "56px",
            "spread": "-16px",
            "color": "rgba(15, 23, 42, 0.24)"
          },
          "$description": "High elevation shadow used for overlays and dialogs in Theme 0."
        }
      }
    }
  }
}

{
  "ref": {
    "shadow": {
      "color": {
        "subtle": {
          "$type": "color",
          "$value": "rgba(15, 23, 42, 0.12)",
          "$description": "Soft ambient shadow colour for elevated surfaces."
        },
        "strong": {
          "$type": "color",
          "$value": "rgba(15, 23, 42, 0.24)",
          "$description": "Stronger shadow colour for high elevation overlays."
        }
      }
    }
  },
  "shadow": {
    "elevation": {
      "card": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "12px",
          "blur": "20px",
          "spread": "-8px",
          "color": "{ref.shadow.color.subtle}"
        },
        "$description": "Primary elevation shadow for raised cards and panels."
      },
      "overlay": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "16px",
          "blur": "28px",
          "spread": "-12px",
          "color": "{ref.shadow.color.strong}"
        },
        "$description": "High elevation shadow for overlays, dialogs, and popovers."
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "brand": {
      "type": "string",
      "enum": ["A"],
      "default": "A",
      "description": "Target brand identifier."
    },
    "delta": {
      "description": "Alias changes (object) or RFC 6902 patch array when strategy=patch.",
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/DeltaValue" }
        },
        {
          "type": "array",
          "items": { "$ref": "#/$defs/PatchOperation" }
        }
      ]
    },
    "strategy": {
      "type": "string",
      "enum": ["alias", "patch"],
      "default": "alias",
      "description": "Alias strategy rewrites token values; patch applies RFC 6902 operations."
    },
    "apply": {
      "type": "boolean",
      "default": false
    }
  },
  "required": ["delta"],
  "additionalProperties": false,
  "$defs": {
    "DeltaValue": {
      "anyOf": [
        { "type": "string" },
        { "type": "number" },
        { "type": "boolean" },
        { "type": "null" },
        {
          "type": "array",
          "items": { "$ref": "#/$defs/DeltaValue" }
        },
        {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/DeltaValue" }
        }
      ]
    },
    "PatchOperation": {
      "type": "object",
      "properties": {
        "op": {
          "type": "string",
          "enum": ["add", "remove", "replace"]
        },
        "path": { "type": "string" },
        "value": { "$ref": "#/$defs/DeltaValue" }
      },
      "required": ["op", "path"],
      "additionalProperties": false
    }
  }
}

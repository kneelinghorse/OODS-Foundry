{
  "name": "@oods/mcp-server",
  "version": "0.1.0",
  "private": true,
  "description": "Minimal MCP server (stdio + health) with sandboxed artifacts",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "generate:types": "pnpm exec tsx ../schemas-tools/src/generate-types.ts --schemas src/schemas --out src/schemas/generated.ts",
    "check:types": "pnpm exec tsx ../schemas-tools/src/generate-types.ts --schemas src/schemas --out src/schemas/generated.ts --check",
    "test:contracts": "vitest run --config vitest.config.ts",
    "build": "pnpm run check:types && tsc -p tsconfig.json && mkdir -p dist/schemas dist/security && cp -f src/schemas/*.json dist/schemas/ 2>/dev/null || true && cp -f src/security/*.json dist/security/ 2>/dev/null || true",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@oods/artifacts": "workspace:*",
    "@oods/release-utils": "workspace:*",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "fastify": "^4.28.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "tsx": "^4.20.6"
  }
}

{
  "$schema": "https://json-schema.org/draft/07/schema",
  "$id": "https://trait-engine.dev/schemas/traits/colorized",
  "title": "Colorized Trait Parameters",
  "description": "Configuration contract for Colorized trait semantics.",
  "type": "object",
  "properties": {
    "colorStates": {
      "type": "array",
      "description": "Semantic color keys applied to statuses.",
      "minItems": 1,
      "maxItems": 8,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 24,
        "pattern": "^[a-z0-9_-]+$",
        "description": "Token namespace suffix without the status.* prefix."
      }
    }
  },
  "required": ["colorStates"],
  "additionalProperties": false,
  "examples": [
    {
      "colorStates": ["neutral", "info", "success", "warning", "danger"]
    }
  ]
}

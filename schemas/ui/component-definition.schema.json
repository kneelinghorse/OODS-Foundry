{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OODS Component Catalogue",
  "description": "Aggregated description of OODS components, traits, objects, and supporting metadata for structured data interchange.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Relative or absolute reference to the schema that validated this file."
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp (ISO-8601) when the catalogue was generated."
    },
    "stats": {
      "type": "object",
      "description": "High-level counts for quick sanity checks.",
      "properties": {
        "componentCount": { "type": "integer", "minimum": 0 },
        "traitCount": { "type": "integer", "minimum": 0 },
        "objectCount": { "type": "integer", "minimum": 0 },
        "domainCount": { "type": "integer", "minimum": 0 },
        "patternCount": { "type": "integer", "minimum": 0 }
      },
      "required": [
        "componentCount",
        "traitCount",
        "objectCount",
        "domainCount",
        "patternCount"
      ]
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "displayName": { "type": "string" },
          "categories": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "contexts": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "regions": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "traitUsages": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "trait": { "type": "string" },
                "traitCategory": { "type": ["string", "null"] },
                "context": { "type": "string" },
                "source": { "type": "string" },
                "position": { "type": ["string", "null"] },
                "priority": { "type": ["number", "null"] },
                "props": { "type": ["object", "null"], "additionalProperties": true }
              },
              "required": ["trait", "context", "source"]
            }
          },
          "sourceFiles": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          }
        },
        "required": ["id", "contexts", "traitUsages", "sourceFiles"]
      }
    },
    "traits": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "version": { "type": ["string", "null"] },
          "description": { "type": ["string", "null"] },
          "category": { "type": ["string", "null"] },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "parameters": { "type": "array", "items": { "type": "object", "additionalProperties": true } },
          "schema": { "type": "object", "additionalProperties": true },
          "semantics": { "type": "object", "additionalProperties": true },
          "tokens": { "type": "object", "additionalProperties": true },
          "dependencies": { "type": "array", "items": { "type": "string" } },
          "metadata": { "type": "object", "additionalProperties": true },
          "contexts": { "type": "array", "items": { "type": "string" }, "uniqueItems": true },
          "viewExtensions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "component": { "type": ["string", "null"] },
                "context": { "type": ["string", "null"] },
                "position": { "type": ["string", "null"] },
                "priority": { "type": ["number", "null"] },
                "props": { "type": ["object", "null"], "additionalProperties": true }
              }
            }
          },
          "objects": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "source": { "type": "string" }
        },
        "required": ["name", "source"]
      }
    },
    "objects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "version": { "type": ["string", "null"] },
          "domain": { "type": ["string", "null"] },
          "description": { "type": ["string", "null"] },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "traits": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "reference": { "type": "string" },
                "alias": { "type": ["string", "null"] },
                "parameters": { "type": "object", "additionalProperties": true }
              },
              "required": ["reference"]
            }
          },
          "fields": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "semantics": { "type": "object", "additionalProperties": true },
          "tokens": { "type": "object", "additionalProperties": true },
          "metadata": { "type": "object", "additionalProperties": true },
          "source": { "type": "string" }
        },
        "required": ["name", "source"]
      }
    },
    "domains": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "objectCount": { "type": "integer", "minimum": 0 },
          "traitCount": { "type": "integer", "minimum": 0 },
          "objects": { "type": "array", "items": { "type": "string" }, "uniqueItems": true },
          "traits": { "type": "array", "items": { "type": "string" }, "uniqueItems": true },
          "source": { "type": "string" }
        },
        "required": ["name", "source"]
      }
    },
    "patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "summary": { "type": "string" },
          "source": { "type": "string" }
        },
        "required": ["id", "title", "source"]
      }
    },
    "sampleQueries": {
      "type": "object",
      "properties": {
        "formComponents": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "traits": {
                "type": "array",
                "items": { "type": "string" },
                "uniqueItems": true
              }
            },
            "required": ["id"]
          }
        }
      },
      "additionalProperties": true
    }
  },
  "required": [
    "generatedAt",
    "components",
    "traits",
    "objects",
    "domains",
    "patterns",
    "sampleQueries"
  ]
}
